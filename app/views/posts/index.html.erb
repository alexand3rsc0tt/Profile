<h1> Blog </h1>
<% @posts.each do |post| %>
	<h2><%= post.title %></h2>
	<h3><%= post.author %></h3>
	<p><%= post.body %></p>
	<%= link_to 'Show Post', post_path(post.id) %>
	<%= link_to 'Edit Post', edit_post_path(post.id) %>
	<%= link_to 'Delete', post, method: :delete %>
<% end %>	

<p><%= link_to 'New Post', new_post_path %></p>